<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title><%= pkg.name %></title>
    <link rel="stylesheet" type="text/css" href="/css/app.css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Lato|Open+Sans:400,300' rel='stylesheet' type='text/css'>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body ng-controller="HomeController">
    <!-- <div id="view" ng-view></div> -->
    <mobile-frame>
    <mobile-header>
        <!-- top-bar-content goes here -->
    </mobile-header>
    <mobile-nav>
        <!-- off-canvas-nav-content goes here -->
        <div class="link nav topic" data-ng-repeat="(room,data) in rooms">{{room}}</div>
    </mobile-nav>
    <mobile-content>
        <!-- main-content goes here -->
        <div class="login-form">
            <div class="input-group">
            <input type="text" placeholder="Name" class="form-control">
            <button class="btn btn-default" type="button">Go!</button>
          </div>
        </div>
        <div class="triangle-border">
            Chat goes here man.
            <form action="#">
                <textarea id="message_input"></textarea>
                <button id="send_button">Send </button>
            </form>
        </div>
    </mobile-content>
    <mobile-footer>
        <!-- bottom-bar-content goes here -->
        <div class="link footer-chatroom">#General Topic 3</div>
        <div class="link footer-chatroom">#General Topic 1</div>
    </mobile-footer>
</mobile-frame>

    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>
